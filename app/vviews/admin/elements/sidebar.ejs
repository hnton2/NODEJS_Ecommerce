<%
    let arrMenu = [
            {name: 'Groups', icon: 'fa-users', link: `${systemConfig.prefixAdmin}/groups`, data: 'groups'},
            {name: 'Users', icon: 'fa-user', link: `${systemConfig.prefixAdmin}/users`, data: 'users'},
            {name: 'Category', icon: 'fa-table', link: `${systemConfig.prefixAdmin}/category`, data: 'category'},
            {name: 'Articles', icon: 'fa-book-open', link: `${systemConfig.prefixAdmin}/articles`, data: 'articles'},
            {name: 'Items', icon: 'fa-file', link: `${systemConfig.prefixAdmin}/items`, data: 'items'},
            {name: 'RSS', icon: 'fa-plus-square', link: `${systemConfig.prefixAdmin}/rss`, data: 'rss'}
        ];
    let xhtml = `<li class="nav-item">
            <a href="${systemConfig.prefixAdmin}/dashboard" class="nav-link" data-active="dashboard">
            <i class="nav-icon fas fa-thumbtack"></i>
            <p>Dashboard</p>
            </a>
        </li>`;
    arrMenu.forEach( (menu) => {
        xhtml += `<li class="nav-item">
                    <a href="${menu.link}" class="nav-link" data-active="${menu.data}">
                        <i class="nav-icon fas ${menu.icon}"></i>
                        <p>${menu.name}<i class="fas fa-angle-left right"></i></p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="${menu.link}" class="nav-link" data-active="index">
                                <i class="nav-icon fas fa-list-ul"></i>
                                <p>List</p>
                            </a>
                        </li>
                
                        <li class="nav-item">
                            <a href="${menu.link}/form" class="nav-link" data-active="form">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>Form</p>
                            </a>
                        </li>
                    </ul>
            </li>`;
    });
%>

<aside class="main-sidebar sidebar-dark-info elevation-4">
    <!-- Brand Logo -->
    <a href="/<%=systemConfig.prefixAdmin%>/" class="brand-link">
        <img src="backend/images/logo.png" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">ADMIN</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="uploads/users/<%= userInfo.avatar %>" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block"><%= userInfo.name %></a>
            </div>
        </div>
        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul id="side-menu" class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item menu-open">
                    <a href="#" class="nav-link active">
                      <i class="nav-icon fas fa-tachometer-alt"></i>
                      <p>
                        Article Management
                        <i class="right fas fa-angle-left"></i>
                      </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <%- xhtml %>
                    </ul>
                </li>
                <li class="nav-item menu-open">
                    <a href="#" class="nav-link active">
                      <i class="nav-icon fas fa-tachometer-alt"></i>
                      <p>
                        Sales Management
                        <i class="right fas fa-angle-left"></i>
                      </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="" class="nav-link" data-active="">
                            <i class="nav-icon fas fa-thumbtack"></i>
                            <p>Dashboard</p>
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>
