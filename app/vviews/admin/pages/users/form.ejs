<% include ./../../elements/errors %>
<% include ./../../helpers/selectBox %>
<% include ./../../helpers/input %>
<% include ./../../helpers/textarea %>
<% include ./../../helpers/form-input %>
<% include ./../../helpers/image %>


<% 
	const folderUpload 	=  'users/';
	const collection 	= "users";
	const linkPrefix	= systemConfig.prefixAdmin + `/${collection}/`;

	let elementsForm = [
		{for: 'name', label: 'Name', input: inputHelper('name', user.name)},
		{for: 'username', label: 'User name', input: inputHelper('username', user.username)},
		{for: 'password', label: 'Password', input: inputHelper('password', user.password)},
		{for: 'avatar', label: 'Avatar', input: inputHelper('avatar', user.name, 'file')},
		{for: 'showAvatar', label: '', input: imageHelper(folderUpload, user.avatar, 'no-avatar.png', user.name, 'img-avatar-form preview-avatar', 100)},
		{for: 'ordering', label: 'Ordering', input: inputHelper('ordering', user.ordering)},
		{for: 'status', label: 'Status', input: selectBoxHelper('status', systemConfig.status_value, user.status)},
		{for: 'group', label: 'Group', input: selectBoxHelper('group_id', groupItems, user.group_id)},
		{for: 'content', label: 'Content', input: textareaHelper('content', user.content)}
	];

	let xhtml = createFormHelper(elementsForm);
%>

<div class="card card-info card-outline">
	<form action="<%= linkPrefix %>save/" method="POST" class="mb-0" enctype="multipart/form-data" name="form-upload">
		<div class="card-body">
			<%- xhtml %>
		</div>
		<div class="card-footer">
			<div class="col-12 col-sm-8 offset-sm-2">
				<input class="form-control" name="id" value="<%= user.id %>" type="hidden" >
				<input name="image_old" value="<%= user.avatar %>" type="hidden"  />
				<input class="form-control" name="group_name" value="<%= user.group_name %>" type="hidden" >
				<button type="submit" class="btn btn-sm btn-success mr-1"> Submit</button>
				<a href="<%= linkPrefix %>" class="btn btn-sm btn-danger mr-1"> Cancel</a>
			</div>
		</div>
	</form>
</div>