<% include ./../../helpers/get-name-status-contact %>
<% 
	const linkOrder = systemConfig.prefixAdmin + `/orders/form/`;
  const linkPrefix = systemConfig.prefixAdmin + `/`;
  const folderUpload 	= 'uploads/shoes/';
%>
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-success">
              <h3 class="card-title">Best Sales</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th style="width: 10px">#</th>
                    <th>Name</th>
                    <th style="width: 80px">Price</th>
                    <th style="width: 40px">Quality</th>
                  </tr>
                </thead>
                <tbody>
                    <tr>
                      <td>1.</td>
                      <td>Update software</td>
                      <td>$ 100</td>
                      <td><span class="badge bg-danger">55%</span></td>
                    </tr>
                    <tr>
                      <td>1.</td>
                      <td>Update software</td>
                      <td>$ 100</td>
                      <td><span class="badge bg-danger">55%</span></td>
                    </tr>
                    <tr>
                      <td>1.</td>
                      <td>Update software</td>
                      <td>$ 100</td>
                      <td><span class="badge bg-danger">55%</span></td>
                    </tr>
                    <tr>
                      <td>1.</td>
                      <td>Update software</td>
                      <td>$ 100</td>
                      <td><span class="badge bg-danger">55%</span></td>
                    </tr>
                </tbody>
              </table>
            </div>
            <!-- /.card-body -->
            <div class="card-footer clearfix">
              <ul class="pagination pagination-sm m-0 float-right">
                <li class="page-item"><a class="page-link" href="#">«</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">»</a></li>
              </ul>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="info-box mb-3 bg-warning">
            <span class="info-box-icon"><i class="fas fa-tag"></i></span>
            <div class="info-box-content">
              <span class="info-box-text">Inventory</span>
              <span class="info-box-number"><%= nInventory %></span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <div class="info-box mb-3 bg-success">
            <span class="info-box-icon"><i class="far fa-money-bill-alt"></i></span>
            <div class="info-box-content">
              <span class="info-box-text">Sales</span>
              <span class="info-box-number">$ <%= nSales %></span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <div class="info-box mb-3 bg-danger">
            <span class="info-box-icon"><i class="fas fa-wallet"></i></span>

            <div class="info-box-content">
              <span class="info-box-text">Orders</span>
              <span class="info-box-number"><%= totalOrders %></span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <div class="info-box mb-3 bg-info">
            <span class="info-box-icon"><i class="far fa-comment"></i></span>
            <div class="info-box-content">
              <span class="info-box-text">Contact</span>
              <span class="info-box-number"><%= totalContact %></span>
            </div>
            <!-- /.info-box-content -->
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">List contact</h3>
          <div class="card-tools">
            <div class="input-group input-group-sm" style="width: 150px;">
              <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
              <div class="input-group-append">
                <button type="submit" class="btn btn-default">
                  <i class="fas fa-search"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive p-0">
          <table class="table table-hover text-nowrap">
            <thead>
              <tr>
                <th>#</th>
                <th>User</th>
                <th>Email</th>
                <th>Date</th>
                <th class="text-center">Status</th>
                <th>Message</th>
              </tr>
            </thead>
            <tbody>
              <% lastedContact.forEach( (item, index) => { %>
                <tr>
                  <td><%= index+1 %></td>
                  <td><%= item.name %></td>
                  <td><%= item.email %></td>
                  <td><%= moment(item.register_time).format(systemConfig.format_date) %></td>
                  <td><span class="tag tag-success"><%- nameStatusHelper(systemConfig.status_contact, item.status) %></span></td>
                  <td><%= item.message %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </div>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header border-transparent">
        <h3 class="card-title">Latest Orders</h3>
        <div class="card-tools">
          <button type="button" class="btn btn-tool" data-card-widget="collapse">
            <i class="fas fa-minus"></i>
          </button>
          <button type="button" class="btn btn-tool" data-card-widget="remove">
            <i class="fas fa-times"></i>
          </button>
        </div>
      </div>
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table m-0">
            <thead>
            <tr>
              <th>Order ID</th>
              <th>Customer</th>
              <th>Address</th>
              <th>Status</th>
              <th class="text-center">Price</th>
            </tr>
            </thead>
            <tbody>
              <% lastedOrders.forEach( (item, index) => { %>
                <tr>
                  <td><a href="<%= linkOrder + item.id %>"><%= item.code %></a></td>
                  <td><%= item.user.first_name + ' ' + item.user.last_name %><br> </td>
                  <td><%= item.user.address %><br> </td>
                  <td><span class="badge badge-success"><%= item.status %></span></td>
                  <td>
                  <div class="text-center">$ <%= item.total %></div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="card-footer clearfix">
        <a href="/category" class="btn btn-sm btn-info float-left">Place New Order</a>
        <a href="<%= linkPrefix %>orders" class="btn btn-sm btn-secondary float-right">View All Orders</a>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Recently Added Products</h3>
        <div class="card-tools">
          <button type="button" class="btn btn-tool" data-card-widget="collapse">
            <i class="fas fa-minus"></i>
          </button>
          <button type="button" class="btn btn-tool" data-card-widget="remove">
            <i class="fas fa-times"></i>
          </button>
        </div>
      </div>
      <!-- /.card-header -->
      <div class="card-body p-0">
        <ul class="products-list product-list-in-card pl-2 pr-2">
          <% lastedShoes.forEach( (item) => { %>
            <li class="item">
              <div class="product-img">
                <img src="<%= folderUpload + item.thumb[1] %>" alt="Product Image" class="img-size-50">
              </div>
              <div class="product-info">
                <a href="javascript:void(0)" class="product-title"><%= item.category.name %>
                  <span class="badge badge-warning float-right">$<%= item.price %></span></a>
                <span class="product-description">
                  <%= item.name %>
                </span>
              </div>
            </li>
          <% }) %>
        </ul>
      </div>
      <!-- /.card-body -->
      <div class="card-footer text-center">
        <a href="<%= linkPrefix %>shoes" class="uppercase">View All Products</a>
      </div>
      <!-- /.card-footer -->
    </div>
  </div>
</div>


  