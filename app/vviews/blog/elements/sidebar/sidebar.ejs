<% include ./../../helpers/format-date %>
<%  
    const folder_uploads = "uploads/articles/"; 
    const linkPrefix     = systemConfig.prefixBlog + '/article/';
    const linkWeather = systemConfig.prefixBlog + '/rss/get-weather'; 
    const linkGold = systemConfig.prefixBlog + '/rss/get-gold';
%>
<div class="col-md-3 animate-box" data-animate-effect="fadeInRight">
    <div>
        <div class="fh5co_heading fh5co_heading_border_bottom pt-3 py-2 mb-4">Thời tiết</div>
    </div>
    <div class="clearfix"></div>
    <div id="box-weather" data-url="<%- linkWeather%>">
        <div class="text-center">
            <img style="width: 150px" src="frontend/blog/images/loading.gif" alt="">
        </div>
    </div>
    <div>
        <div class="fh5co_heading fh5co_heading_border_bottom pt-3 py-2 mb-4">Bài viết ngẫu nhiên</div>
    </div>
    <% itemsRandom.forEach( (item) => { %>
        <div class="row pb-3">
            <div class="col-5 align-self-center">
                <img src="<%= folder_uploads + item.thumb %>" alt="<%= item.name %>" class="fh5co_most_trading"/>
            </div>
            <div class="col-7 paddding">
                <a class="fh5co_magna py-2" href="<%= linkPrefix + item.id %>"> <%= item.name %> </a>
                <div class="most_fh5co_treding_font_123"> <%= formatDate(item.created.time)%></div>
            </div>
        </div>
    <% }) %>
    <div> 
        <div class="fh5co_heading fh5co_heading_border_bottom pt-3 py-2 mb-4">Giá vàng</div>
    </div>
    <div class="clearfix"></div>
    <div id="box-gold" data-url="<%- linkGold%>">
        <div class="text-center">
            <img style="width: 150px" src="frontend/blog/images/loading.gif" alt="">
        </div>
    </div>
</div> 