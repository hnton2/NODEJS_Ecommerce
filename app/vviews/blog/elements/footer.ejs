<% 
    const folder_uploads = "uploads/articles/"; 
    const linkPrefix = systemConfig.prefixBlog;
%>
<% include ./../helpers/format-date %>

<div class="container-fluid fh5co_footer_bg pb-3">
    <div class="container animate-box">
        <div class="row">
            <div class="col-12 spdp_right py-5"><img src="frontend/blog/images/white_logo.png" alt="img" class="footer_logo"/></div>
            <div class="clearfix"></div>
            <div class="col-12 col-md-4 col-lg-3">
                <div class="footer_main_title py-3"> Giới thiệu</div>
                <div class="footer_sub_about pb-3"> <%= settingConfig.about %>
                </div>
                <div class="footer_mediya_icon">
                    <div class="text-center d-inline-block">
                        <a href="<%= settingConfig.social.instagram %>" class="fh5co_display_table_footer">
                        <div class="fh5co_verticle_middle"><i class="fa fa-linkedin"></i></div>
                    </a></div>
                    <div class="text-center d-inline-block"><a  class="fh5co_display_table_footer">
                        <div class="fh5co_verticle_middle"><i class="fa fa-google-plus"></i></div>
                    </a></div>
                    <div class="text-center d-inline-block"><a class="fh5co_display_table_footer">
                        <div class="fh5co_verticle_middle"><i class="fa fa-twitter"></i></div>
                    </a></div>
                    <div class="text-center d-inline-block"><a href="<%= settingConfig.social.facebook %>" class="fh5co_display_table_footer">
                        <div class="fh5co_verticle_middle"><i class="fa fa-facebook"></i></div>
                    </a></div>
                </div>
            </div>
            <div class="col-12 col-md-3 col-lg-2">
                <div class="footer_main_title py-3"> Thể loại</div>
                <ul class="footer_menu">
                    <% if(itemsCategory.length > 0) { %>
                        <% itemsCategory.forEach ( (item)=>{ %>
                            <li><a href="<%= linkPrefix %>/category/<%=  item.slug %>" class=""><i class="fa fa-angle-right"></i>&nbsp;&nbsp;<%= item.name %></a></li>
                        <% }) %>
                    <% } %>
                </ul>
            </div>
            <div class="col-12 col-md-5 col-lg-3 position_footer_relative">
                <div class="footer_main_title py-3"> Xem nhiều nhất</div>
                <% for(let i = 0; i < 3; i++) { %>
                    <div class="footer_makes_sub_font"> <%= formatDate(itemsRandom[i].created.time)%></div>
                    <a href="<%= linkPrefix %>/article/<%= itemsRandom[i].id %>" class="footer_post pb-4"> <%= itemsRandom[i].name %> </a>
                <% } %>
                <div class="footer_position_absolute"><img src="frontend/blog/images/footer_sub_tipik.png" alt="img" class="width_footer_sub_img"/></div>
            </div>
            <div class="col-12 col-md-12 col-lg-4 ">
                <div class="footer_main_title py-3"> Bài viết mới nhất</div>
                <% for(let i = 0; i < itemsTrending.length; i++) { %>
                    <a href="<%= linkPrefix %>/article/<%= itemsTrending[i].id %>" class="footer_img_post_6"><img src="<%= folder_uploads + itemsTrending[i].thumb %>" alt="img"/></a>
                <% } %>
            </div>
        </div>
        <div class="row justify-content-center pt-2 pb-4">
            <div class="col-12 col-md-8 col-lg-7 ">
                <div class="input-group">
                    <span class="input-group-addon fh5co_footer_text_box" id="basic-addon1"><i class="fa fa-envelope"></i></span>
                    <input type="text" class="form-control fh5co_footer_text_box" placeholder="Enter your email..." aria-describedby="basic-addon1">
                    <a href="#" class="input-group-addon fh5co_footer_subcribe" id="basic-addon12"> <i class="fa fa-paper-plane-o"></i>&nbsp;&nbsp;Subscribe</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid fh5co_footer_right_reserved">
    <div class="container">
        <div class="row  ">
            <div class="col-12 col-md-6 py-4 Reserved"><a></a> </div>
            <div class="col-12 col-md-6 spdp_right py-4">
                <a href="<%= linkPrefix %>/" class="footer_last_part_menu">Home</a>
                <a href="<%= linkPrefix %>/about" class="footer_last_part_menu">About</a>
                <a href="<%= linkPrefix %>/contact" class="footer_last_part_menu">Contact</a>
                <a href="<%= linkPrefix %>/rss" class="footer_last_part_menu">Latest News</a></div>
        </div>
    </div>
</div>

<div class="gototop js-top">
    <a href="#" class="js-gotop"><i class="fa fa-arrow-up"></i></a>
</div>