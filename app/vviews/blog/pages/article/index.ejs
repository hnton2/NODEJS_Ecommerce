<% include ./../../helpers/format-date %>
<% const folder_uploads = "uploads/articles/"; %>
<div class="col-lg-8 post-list">
	<!-- Start single-post Area -->
	<div class="single-post-wrap">
		<div class="feature-img-thumb relative">
			<div class="overlay overlay-bg"></div>
			<img class="img-fluid" src="<%= folder_uploads + itemArticle.thumb %>" alt="<%= itemArticle.name %>">
		</div>
		<div class="content-wrap">
			<ul class="tags mt-10">
				<li><a href="#"><%= itemArticle.category.name%></a></li>
			</ul>
			<a href="#">
				<h3><%= itemArticle.name %></h3>
			</a>
			<ul class="meta pb-20">
				<li><a href="#"><span class="lnr lnr-user"></span><%= itemArticle.created.name %></a></li>
				<li><a href="#"><span class="lnr lnr-calendar-full"></span><%= formatDate(itemArticle.created.time) %></a></li>
				<li><a href="#"><span class="lnr lnr-bubble"></span>06 </a></li>
			</ul>
			<blockquote><%= itemArticle.summary %></blockquote>
			<p><%- itemArticle.content %></p>
		</div>
		<div class="navigation-wrap justify-content-between d-flex">
			<a class="prev" href="#"><span class="lnr lnr-arrow-left"></span>Prev Post</a>
			<a class="next" href="#">Next Post<span class="lnr lnr-arrow-right"></span></a>
		</div>
	</div>
	<div class="relavent-story-post-wrap mt-30">
		<h4 class="title">Related  Stories</h4>
		<% if(itemsRelated.length > 0) { %>
            <% itemsRelated.forEach( (item) => { %>
				<div class="relavent-story-list-wrap">
					<div class="single-relavent-post row align-items-center">
						<div class="col-lg-5 post-left">
							<div class="feature-img relative">
								<div class="overlay overlay-bg"></div>
								<img class="img-fluid" src="<%= folder_uploads + item.thumb %>" alt="<%= item.name %>">
							</div>
							<ul class="tags">
								<li><a href="category/<%= item.category.id %>"><%= item.category.name %></a></li>
							</ul>
						</div>
						<div class="col-lg-7 post-right">
							<a href="article/<%= item.id %>">
								<h4><%= item.name %></h4>
							</a>
							<ul class="meta">
								<li><a href="#"><span class="lnr lnr-user"></span><%= item.created.name %></a></li>
								<li><a href="#"><span class="lnr lnr-calendar-full"></span><%= formatDate(item.created.time) %></a></li>
								<li><a href="#"><span class="lnr lnr-bubble"></span>06 Comments</a></li>
							</ul>
							<p class="excert">
								<%= item.summary %>
							</p>
						</div>
					</div>
				</div>
			<% }) %>
        <% } else { %>
            <tr ><td colspan="9"><h3>Không có dữ liệu</h3></td></tr>
        <% } %>	
	</div>
	<!-- End single-post Area -->
</div>