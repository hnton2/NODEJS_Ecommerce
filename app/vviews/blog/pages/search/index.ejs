<% include ./../../helpers/format-date %>
<% const folder_uploads = "uploads/articles/"; %>

<div class="col-md-8 animate-box" data-animate-effect="fadeInLeft">
    <div>
        <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">Kết quả tìm kiếm</div>
    </div>
    <% items.forEach( (item) => { %>
        <div class="row pb-4">
            <div class="col-md-5">
                <div class="fh5co_hover_news_img">
                    <div class="fh5co_news_img"><img src="<%= folder_uploads + item.thumb %>" alt="<%= item.name %>"/></div>
                    <div></div>
                </div>
            </div>
            <div class="col-md-7 animate-box">
                <a href="article/<%= item.id %>" class="fh5co_magna py-2"><%= item.name %></a> 
                <a href="#" class="fh5co_mini_time py-3"> <%= formatDate(item.created.time) %> </a>
                <div class="fh5co_consectetur"><%= item.summary %></div>
            </div>
        </div>
    <% }) %>
</div>