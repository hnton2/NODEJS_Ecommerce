<%
    const linkSubmit = systemConfig.prefixBlog + '/contact/save';
%>
<div class="container-fluid  fh5co_fh5co_bg_contcat">
    <div class="container">
        <div class="row py-4">
            <div class="col-md-4 py-3">
                <div class="row fh5co_contact_us_no_icon_difh5co_hover">
                    <div class="col-3 fh5co_contact_us_no_icon_difh5co_hover_1">
                        <div class="fh5co_contact_us_no_icon_div"> <span><i class="fa fa-phone"></i></span> </div>
                    </div>
                    <div class="col-9 align-self-center fh5co_contact_us_no_icon_difh5co_hover_2">
                        <span class="c_g d-block">Số điện thoại</span>
                        <span class="d-block c_g fh5co_contact_us_no_text"><%= settingConfig.hotline %></span>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="col-md-4 py-3">
                <div class="row fh5co_contact_us_no_icon_difh5co_hover">
                    <div class="col-3 fh5co_contact_us_no_icon_difh5co_hover_1">
                        <div class="fh5co_contact_us_no_icon_div"> <span><i class="fa fa-envelope"></i></span> </div>
                    </div>
                    <div class="col-9 align-self-center fh5co_contact_us_no_icon_difh5co_hover_2">
                        <span class="c_g d-block">Email</span>
                        <span class="d-block c_g fh5co_contact_us_no_text"><%= settingConfig.email %></span>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="col-md-4 py-3">
                <div class="row fh5co_contact_us_no_icon_difh5co_hover">
                    <div class="col-3 fh5co_contact_us_no_icon_difh5co_hover_1">
                        <div class="fh5co_contact_us_no_icon_div"> <span><i class="fa fa-map-marker"></i></span> </div>
                    </div>
                    <div class="col-9 align-self-center fh5co_contact_us_no_icon_difh5co_hover_2">
                        <span class="c_g d-block">Địa chỉ</span>
                        <span class="d-block c_g fh5co_contact_us_no_text"><%= settingConfig.address %></span>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<div class="container-fluid mb-4">
    <div class="container">
        <div class="col-12 text-center contact_margin_svnit ">
            <% include ./../../elements/notify %>
            <div class="text-center fh5co_heading py-2">Liên hệ</div>
        </div>
        <div class="row">
            <div class="col-12 col-md-12">
                <form class="row" id="fh5co_contact_form" name="contact-form" action="<%= linkSubmit %>" method="POST">
                    <div class="col-12 py-3">
                        <input type="text" name='name' class="form-control fh5co_contact_text_box" placeholder="Enter Your Name" />
                    </div>
                    <div class="col-6 py-3">
                        <input type="text" name='email' class="form-control fh5co_contact_text_box" placeholder="E-mail" />
                    </div>
                    <div class="col-6 py-3">
                        <input type="text" name='phone' class="form-control fh5co_contact_text_box" placeholder="Phone" />
                    </div>
                    <div class="col-12 py-3">
                        <textarea class="form-control fh5co_contacts_message" name='message' placeholder="Message"></textarea>
                    </div>
                    <div class="col-12 py-3 text-center"> <button type="submit" class="btn contact_btn">Send Message</button> </div>
                </form>
            </div>
        </div>
    </div>
</div>