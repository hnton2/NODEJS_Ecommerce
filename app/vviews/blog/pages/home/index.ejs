<% include ./../../helpers/format-date %>
<% const folder_uploads = "uploads/articles/"; %>
<div class="col-md-9 animate-box" data-animate-effect="fadeInLeft">
    <div>
        <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">Tin mới nhất</div>
    </div>
    <% for( let i = 0; i < allItems.length/2; i++) { %>
    <div class="row pb-4">
        <div class="col-md-5">
            <div class="fh5co_hover_news_img">
                <div class="fh5co_news_img"><img src="<%= folder_uploads + allItems[i].thumb %>" alt="<%= allItems[i].name %>"/></div>
                <div></div>
            </div>
        </div>
        <div class="col-md-7 animate-box">
            <a href="blog/article/<%= allItems[i].id %>" class="fh5co_magna py-2"> <%= allItems[i].name %> </a>
            <br>
            <a href="#" class="fh5co_mini_time py-3"> <%= formatDate(allItems[i].created.time) %> </a>
            <div class="fh5co_consectetur"> 
                <%= allItems[i].summary %>
            </div>
        </div>
    </div>
    <% } %>

    <div>
        <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">Tin nổi bật</div>
    </div>
    <% for( let i = allItems.length/2 + 1; i < allItems.length; i++) { %>
        <div class="row pb-4">
        <div class="col-md-5">
            <div class="fh5co_hover_news_img">
                <div class="fh5co_news_img"><img src="<%= folder_uploads + allItems[i].thumb %>" alt="<%= allItems[i].name %>"/></div>
                <div></div>
            </div>
        </div>
        <div class="col-md-7 animate-box">
            <a href="blog/article/<%= allItems[i].id %>" class="fh5co_magna py-2"> <%= allItems[i].name %> </a>
            <br>
            <a href="#" class="fh5co_mini_time py-3"> <%= formatDate(allItems[i].created.time) %> </a>
            <div class="fh5co_consectetur"> 
                <%= allItems[i].summary %>
            </div>
        </div>
    </div>
    <% } %>
</div>

