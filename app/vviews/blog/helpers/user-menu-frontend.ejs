<% 
    userMenuHelpers = (folderUpload, linkPrefix, userInfo) => {
      let linkAvatar = folderUpload + userInfo.avatar;
      let xhtmlMenuUser = '';
      if(Object.keys(userInfo).length > 0) {
          xhtmlMenuUser = `<div class="col-lg-6 col-md-6 col-sm-6 col-6 header-top-right no-padding">
              <nav class="navbar navbar-dark navbar-expand-sm">
                  <a class="navbar-brand" href="#">
                      ${userInfo.name}
                  </a>
                  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-list-4" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                  <div class="collapse navbar-collapse" id="navbar-list-4">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          <img src="${linkAvatar}" width="40" height="40" class="rounded-circle">
                        </a>
                        <div class="dropdown-menu bg-dark" aria-labelledby="navbarDropdownMenuLink">
                          <a class="dropdown-item" href="${linkPrefix}dashboard">Dashboard</a>
                          <a class="dropdown-item" href="${linkPrefix}users/form/${userInfo.id}/">Edit Profile</a>
                          <a class="dropdown-item" href="/auth/logout/">Log Out</a>
                        </div>
                      </li>   
                    </ul>
                  </div>
                </nav>
          </div>`;
      }
      return xhtmlMenuUser;
    }
%>