<% include ./../helpers/format-date %>
<% 
    const folder_uploads = "uploads/articles/"; 
    const linkPrefixCategory     = systemConfig.prefixBlog + '/category';
    const linkPrefixArticle     = systemConfig.prefixBlog + '/article';
    const linkBoxCategory1 = systemConfig.prefixBlog + '/get-article-in-category1'; 
%>
<!-- Top News Slider Start -->
<div class="container-fluid py-3">
    <div class="container">
        <div class="owl-carousel owl-carousel-2 carousel-item-3 position-relative">
            <% for(let i = 0; i < itemsTrending.length; i++) { %>
                <div class="d-flex">
                    <img src="<%= folder_uploads + itemsTrending[i].thumb %>" alt="<%= itemsTrending[i].name %>" style="width: 80px; height: 80px; object-fit: cover;">
                    <div class="d-flex align-items-center bg-light px-3" style="height: 80px;">
                        <a class="text-secondary font-weight-semi-bold" href="<%= linkPrefixArticle + itemsTrending[i].id %>"><%= itemsTrending[i].name %></a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>
<!-- Top News Slider End -->


<!-- Main News Slider Start -->
<div class="container-fluid py-3">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="owl-carousel owl-carousel-2 carousel-item-1 position-relative mb-3 mb-lg-0">
                    <% for(let i = 0; i < itemsSpecial.length; i++) { %>
                        <div class="position-relative overflow-hidden" style="height: 435px;">
                            <img class="img-fluid h-100" src="<%= folder_uploads + itemsSpecial[i].thumb %>" alt="<%= itemsSpecial[i].name %>" style="object-fit: cover;">
                            <div class="overlay">
                                <div class="mb-1">
                                    <a class="text-white" href="<%= linkPrefixCategory + itemsSpecial[i].category.slug %>"><%= itemsSpecial[i].category.name %></a>
                                    <span class="px-2 text-white">/</span>
                                    <a class="text-white" href=""><%= formatDate(itemsSpecial[i].created.time) %></a>
                                </div>
                                <a class="h2 m-0 text-white font-weight-bold" href="<%= linkPrefixArticle + itemsSpecial[i].id %>"><%= itemsSpecial[i].name %></a>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="d-flex align-items-center justify-content-between bg-light py-2 px-4 mb-3">
                    <h3 class="m-0">Thể loại</h3>
                    <a class="text-secondary font-weight-medium text-decoration-none" href="">View All</a>
                </div>
                <% for(let i = 0; i < 4; i++) { %>
                    <div class="position-relative overflow-hidden mb-3" style="height: 80px;">
                        <img class="img-fluid w-100 h-100" src="frontend/blog2/img/1.jpg" style="object-fit: cover;">
                        <a href="<%= linkPrefixCategory + itemsCategory[i].slug %>" class="overlay align-items-center justify-content-center h4 m-0 text-white text-decoration-none">
                            <%= itemsCategory[i].name %>
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>
<!-- Main News Slider End -->


<!-- Featured News Slider Start -->
<div class="container-fluid py-3">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between bg-light py-2 px-4 mb-3">
            <h3 class="m-0">Tin nổi bật</h3>
            <a class="text-secondary font-weight-medium text-decoration-none" href="">View All</a>
        </div>
        <div class="owl-carousel owl-carousel-2 carousel-item-4 position-relative">
            <% itemsNews.forEach ( (item)=>{ %>
                <div class="position-relative overflow-hidden" style="height: 300px;">
                    <img class="img-fluid w-100 h-100" src="<%= folder_uploads + item.thumb %>" alt="<%= item.name %>" style="object-fit: cover;">
                    <div class="overlay">
                        <div class="mb-1" style="font-size: 13px;">
                            <a class="text-white" href="<%= linkPrefixCategory + item.category.slug %>"><%= item.category.name %></a>
                            <span class="px-1 text-white">/</span>
                            <a class="text-white" href=""><%= formatDate(item.created.time) %></a>
                        </div>
                        <a class="h4 m-0 text-white" href="<%= linkPrefixArticle + item.id %>"><%= item.name %></a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>
</div>
<!-- Featured News Slider End -->


<!-- Category News Slider Start -->
<div class="container-fluid">
    <div class="container">
        <div class="row" id="box-category1" data-url="<%- linkBoxCategory1 %>">
            
        </div>
    </div>
</div>
</div>
