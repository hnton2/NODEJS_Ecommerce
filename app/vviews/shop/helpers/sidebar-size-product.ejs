<%
    sidebarSizeHelper = (type) => {
        let items;
        let xhtml = '<tr>';
        if(type === 'shoes') {
            items = systemConfig.size_shoe_value;
        } else if(type === 'clothing') {
            items = systemConfig.size_clothing_value;
        } else if(type === 'accessory') {
            return;
        }
        items.forEach ((item, index) => {
            if((index+1) % 5 !== 0) xhtml += `<td>${item.name}</td>`
            else {
                xhtml +=  `<td>${item.name}</td></tr><tr>`;
            }
        })
        return `<aside class="ps-widget--sidebar">
            <div class="ps-widget__header">
              <h3>Size</h3>
            </div>
            <div class="ps-widget__content">
              <table class="table ps-table--size" id="table_size">
                <tbody>
                  ${xhtml}
                </tbody>
              </table>
            </div>
          </aside>`;
    }
%>