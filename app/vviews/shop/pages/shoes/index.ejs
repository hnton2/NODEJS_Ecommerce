<% include ./../../helpers/show-reviews %>

<% 
  const folder_upload = 'uploads/shoes/'; 
  const linkPrefix     = systemConfig.prefixShop + '/';
  const linkShoes    = systemConfig.prefixShop + '/shoes/';
%>

<div class="test"> 
  <div class="container">
    <div class="row"> 
      <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 "></div>
    </div>
  </div>
</div>
<div class="ps-product--detail pt-60">
  <div class="ps-container">
    <div class="row">
      <div class="col-lg-10 col-md-12 col-lg-offset-1">
        <div class="ps-product__thumbnail">
          <div class="ps-product__preview">
            <div class="ps-product__variants">
              <div class="item"><img src="<%= folder_upload + itemMain[0].thumb[1] %>" alt=""></div>
              <div class="item"><img src="<%= folder_upload + itemMain[0].thumb[0] %>" alt=""></div>
              <div class="item"><img src="<%= folder_upload + itemMain[0].thumb[2] %>" alt=""></div>
              <div class="item"><img src="<%= folder_upload + itemMain[0].thumb[3] %>" alt=""></div>
              <div class="item"><img src="<%= folder_upload + itemMain[0].thumb[4] %>" alt=""></div>
            </div></div>
          <div class="ps-product__image">
            <div class="item"><img class="zoom" src="<%= folder_upload + itemMain[0].thumb[1] %>" alt="" data-zoom-image="<%= folder_upload + itemMain[0].thumb[1] %>"></div>
            <div class="item"><img class="zoom" src="<%= folder_upload + itemMain[0].thumb[0] %>" alt="" data-zoom-image="<%= folder_upload + itemMain[0].thumb[0] %>"></div>
            <div class="item"><img class="zoom" src="<%= folder_upload + itemMain[0].thumb[2] %>" alt="" data-zoom-image="<%= folder_upload + itemMain[0].thumb[2] %>"></div>
            <div class="item"><img class="zoom" src="<%= folder_upload + itemMain[0].thumb[3] %>" alt="" data-zoom-image="<%= folder_upload + itemMain[0].thumb[3] %>"></div>
            <div class="item"><img class="zoom" src="<%= folder_upload + itemMain[0].thumb[4] %>" alt="" data-zoom-image="<%= folder_upload + itemMain[0].thumb[4] %>"></div>
          </div>
        </div>
        <div class="ps-product__thumbnail--mobile">
          <div class="ps-product__main-img"><img src="<%= folder_upload + itemMain[0].thumb[1] %>" alt=""></div>
          <div class="ps-product__preview owl-slider" data-owl-auto="true" data-owl-loop="true" data-owl-speed="5000" data-owl-gap="20" data-owl-nav="true" data-owl-dots="false" data-owl-item="3" data-owl-item-xs="3" data-owl-item-sm="3" data-owl-item-md="3" data-owl-item-lg="3" data-owl-duration="1000" data-owl-mousedrag="on">
            <img src="<%= folder_upload + itemMain[0].thumb[1] %>" alt="">
            <img src="<%= folder_upload + itemMain[0].thumb[0] %>" alt="">
            <img src="<%= folder_upload + itemMain[0].thumb[2] %>" alt="">
            <img src="<%= folder_upload + itemMain[0].thumb[3] %>" alt="">
            <img src="<%= folder_upload + itemMain[0].thumb[4] %>" alt="">
          </div>
        </div>
        <form id="cart_form" action="<%= linkPrefix %>cart/add-to-cart" method="POST">
          <div class="ps-product__info">
            <div class="ps-product__rating">
              <select class="ps-rating">
                <option value="1">1</option>
                <option value="1">2</option>
                <option value="1">3</option>
                <option value="1">4</option>
                <option value="2">5</option>
              </select>
              <a href="javascript:void(0);">(Read all <%= itemMain[0].reviews.length %> reviews)</a>
            </div>
            <h1><%= itemMain[0].name %></h1>
            <p class="ps-product__category"><a href="<%= linkPrefix + 'category/' + itemMainCategory.slug %>"> <%= itemMain[0].category.name %> shoes</a>,<a href="#"> <%= itemMain[0].brand.name %></a></p>
            <h3 class="ps-product__price">
              <% if(itemMain[0].sale_off > 0) { %>
                <del>$<%= itemMain[0].price %></del> $<%= itemMain[0].price - (itemMain[0].price * (itemMain[0].sale_off/100)) %>
              <% } else { %>
                $<%= itemMain[0].price%>
              <% } %>
            </h3>
            <div class="ps-product__block ps-product__quickview">
              <h4>QUICK REVIEW</h4>
              <p><%- itemMain[0].content %></p>
            </div>
           <!--  <div class="ps-product__block ps-product__style">
              <h4>CHOOSE YOUR STYLE</h4>
              <ul>
                <li><a href="#"><img src="images/shoe/sidebar/1.jpg" alt=""></a></li>
                <li><a href="#"><img src="images/shoe/sidebar/2.jpg" alt=""></a></li>
                <li><a href="#"><img src="images/shoe/sidebar/3.jpg" alt=""></a></li>
                <li><a href="#"><img src="images/shoe/sidebar/2.jpg" alt=""></a></li>
              </ul>
            </div> -->
            <div class="ps-product__block ps-product__size">
              <h4>CHOOSE SIZE</h4>
              <select id="size_select" class="ps-select selectpicker" name="size">
                <option value="0">Select Size</option>
                <% itemMain[0].size.split(',').forEach ( (item) => { %>
                  <option value="<%= item %>"><%= item %></option>
                <% }) %>
              </select>
            </div>
            <div class="ps-product__block ps-product__size">
              <h4>QUANTITY</h4>
              <div class="form-group">
                <input id="quantity_input" class="form-control" type="number" name="quantity" value="1">
              </div>
              <span data-alertid="notify_cart"></span>
            </div>
            <input class="form-control" name="id" value="<%= itemMain[0].id %>" type="hidden" >
            <div class="ps-product__shopping">
              <button class="ps-btn mb-10">Add to cart<i class="ps-icon-next"></i></button>
              <div class="ps-product__actions"><a class="mr-10" href="whishlist.html"><i class="ps-icon-heart"></i></a><a href="compare.html"><i class="ps-icon-share"></i></a></div>
            </div>
          </div>
        </form>
        <div class="clearfix"></div>
        <div class="ps-product__content mt-50">
          <ul class="tab-list" role="tablist">
            <li class="active"><a href="#tab_01" aria-controls="tab_01" role="tab" data-toggle="tab">Overview</a></li>
            <li><a href="#tab_02" aria-controls="tab_02" role="tab" data-toggle="tab">Review</a></li>
            <li><a href="#tab_03" aria-controls="tab_03" role="tab" data-toggle="tab">PRODUCT TAG</a></li>
            <li><a href="#tab_04" aria-controls="tab_04" role="tab" data-toggle="tab">ADDITIONAL</a></li>
          </ul>
        </div>
        <div class="tab-content mb-60">
          <div class="tab-pane active" role="tabpanel" id="tab_01">
            <%- itemMain[0].content %>
          </div>
          <div class="tab-pane" role="tabpanel" id="tab_02">
            <p class="mb-20"><%= itemMain[0].reviews.length %> review for <strong><%= itemMain[0].name %></strong></p>
            <%- reviewsHelpers(itemMain[0].reviews) %>
            <% include ./../../elements/notify %>
            <form class="ps-product__review" action="<%= linkShoes + 'review/' + itemMain[0].slug  %>" method="post">
              <h4>ADD YOUR REVIEW</h4>
              <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 ">
                  <div class="form-group">
                    <label>Name:<span>*</span></label>
                    <input class="form-control" name="name" type="text" placeholder="">
                  </div>
                  <div class="form-group">
                    <label>Email:<span>*</span></label>
                    <input class="form-control" name="email" type="email" placeholder="">
                  </div>
                  <div class="form-group">
                    <label>Your rating<span></span></label>
                    <select name="rating" class="ps-rating">
                      <option value="1">1</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                      <option value="4">4</option>
                      <option value="5">5</option>
                    </select>
                  </div>
                </div>
                <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12 ">
                  <div class="form-group">
                    <label>Your Review:</label>
                    <textarea class="form-control" name="content" rows="6"></textarea>
                  </div>
                  <div class="form-group">
                    <button class="ps-btn ps-btn--sm">Submit<i class="ps-icon-next"></i></button>
                  </div>
                </div>
              </div>
            </form>
          </div>
          <div class="tab-pane" role="tabpanel" id="tab_03">
            <% itemMain[0].tags.split(',').forEach( (item) => { %>
              <div class="tag"><%= item %></div>
            <% }) %>
          </div>
          <div class="tab-pane" role="tabpanel" id="tab_04">
            <div class="form-group">
              <textarea class="form-control" rows="6" placeholder="Enter your addition here..."></textarea>
            </div>
            <div class="form-group">
              <button class="ps-btn" type="button">Submit</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="ps-section ps-section--top-sales ps-owl-root pt-40 pb-80">
  <div class="ps-container">
    <div class="ps-section__header mb-50">
      <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12 ">
          <h3 class="ps-section__title" data-mask="Related item">YOU MIGHT ALSO LIKE</h3>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 ">
          <div class="ps-owl-actions"><a class="ps-prev" href="#"><i class="ps-icon-arrow-right"></i>Prev</a><a class="ps-next" href="#">Next<i class="ps-icon-arrow-left"></i></a></div>
        </div>
      </div>
    </div>
    <div class="ps-section__content">
      <div class="ps-owl--colection owl-slider" data-owl-auto="true" data-owl-loop="true" data-owl-speed="5000" data-owl-gap="30" data-owl-nav="false" data-owl-dots="false" data-owl-item="4" data-owl-item-xs="1" data-owl-item-sm="2" data-owl-item-md="3" data-owl-item-lg="4" data-owl-duration="1000" data-owl-mousedrag="on">
        <% itemsRelated.forEach( (item) => { %>
          <div class="ps-shoes--carousel">
            <div class="ps-shoe">
              <div class="ps-shoe__thumbnail">
                <div class="ps-badge"><span>New</span></div>
                <% if(item.sale_off > 0) { %>
                  <div class="ps-badge ps-badge--sale ps-badge--2nd"><span>-<%= item.sale_off %>%</span></div>
                <% } %>
                <a class="ps-shoe__favorite" href="#"><i class="ps-icon-heart"></i></a>
                <img src="<%= folder_upload + item.thumb[1] %>" alt="">
                <a class="ps-shoe__overlay" href="<%= linkShoes + item.slug %>"></a>
              </div>
              <div class="ps-shoe__content">
                <div class="ps-shoe__variants">
                  <div class="ps-shoe__variant normal">
                    <img src="<%= folder_upload + item.thumb[0] %>" alt="">
                    <img src="<%= folder_upload + item.thumb[1] %>" alt="">
                    <img src="<%= folder_upload + item.thumb[2] %>" alt="">
                    <img src="<%= folder_upload + item.thumb[3] %>" alt="">
                  </div>
                  <select class="ps-rating ps-shoe__rating">
                    <option value="1">1</option>
                    <option value="1">2</option> 
                    <option value="1">3</option>
                    <option value="1">4</option>
                    <option value="2">5</option>
                  </select>
                </div>
                <div class="ps-shoe__detail"><a class="ps-shoe__name" href="<%= linkShoes + item.slug %>"><%= item.name %></a>
                  <p class="ps-shoe__categories"><a href="<%= linkPrefix + 'category/' + itemMainCategory.slug %>"> <%= item.category.name %> shoes</a>,<a href="#"> <%= item.brand.name %></a></p>
                  <span class="ps-shoe__price">
                    <% if(item.sale_off > 0) { %>
                      <del>$<%= item.price %></del> $<%= item.price - (item.price * (item.sale_off/100)) %>
                      <% } else { %>
                        $<%= item.price%>
                      <% } %>
                  </span>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>