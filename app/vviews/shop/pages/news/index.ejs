  <div class="ps-container">
    <div class="row">
      <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12 ">
        <div class="ps-post--detail">
          <div class="ps-post__thumbnail"><img src="<%= folder_uploads + itemMain.thumb %>" alt=""></div>
          <div class="ps-post__header">
            <h3 class="ps-post__title"><%= itemMain.name %></h3>
            <p class="ps-post__meta">Posted by <a href="">Admin</a> on <%= formatDate(itemMain.created.time) %></p>
          </div>
          <div class="ps-post__content">
            <blockquote>
              <p><%= itemMain.summary %></p>
            </blockquote>
            <p><%- itemMain.content %></p>
          </div>
          <div class="ps-post__footer">
            <p class="ps-post__tags"><i class="fa fa-tags"></i><a href="<%= linkCategory + itemMainCategory.slug %>"><%= itemMain.category.name %></a></p>
            <div class="ps-post__actions">
              <span><i class="fa fa-comments"></i> <%= itemMain.comments.length %> Comments</span>
