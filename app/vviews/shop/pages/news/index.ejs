  </div>
</div>
<div class="ps-section ps-section--top-sales ps-owl-root pt-40 pb-40">
  <div class="ps-container">
    <div class="ps-section__header mb-50">
      <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12 ">
          <h3 class="ps-section__title" data-mask="Related item"> RELATED NEWS</h3>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 ">
          <div class="ps-owl-actions"><a class="ps-prev" href="#"><i class="ps-icon-arrow-right"></i>Prev</a><a class="ps-next" href="#">Next<i class="ps-icon-arrow-left"></i></a></div>
        </div>
      </div>
    </div>
    <div class="ps-section__content">
      <div class="ps-owl--colection owl-slider" data-owl-auto="true" data-owl-loop="true" data-owl-speed="5000" data-owl-gap="30" data-owl-nav="false" data-owl-dots="false" data-owl-item="4" data-owl-item-xs="1" data-owl-item-sm="2" data-owl-item-md="3" data-owl-item-lg="4" data-owl-duration="1000" data-owl-mousedrag="on">
        <% itemsRelated.forEach( (item) => { %>
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
            <div class="ps-post">
              <div class="ps-post__thumbnail"><a class="ps-post__overlay" href="<%= linkNews + item.slug %>"></a><img src="<%= folder_uploads + item.thumb %>" style="height: 235px; width: 450px;" alt=""></div>
              <div class="ps-post__content"><a class="ps-post__title" href="<%= linkNews + item.slug %>"><%= item.name %></a>
                <p class="ps-post__meta"><span>By:<a class="mr-5" href="#">Admin</a></span> -<span class="ml-5"><%= formatDate(item.created.time) %></span></p>
                <p><%= formatSummaryHelper(item.summary) %>â€¦</p><a class="ps-morelink" href="<%= linkNews + item.slug %>">Read more<i class="fa fa-long-arrow-right"></i></a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>