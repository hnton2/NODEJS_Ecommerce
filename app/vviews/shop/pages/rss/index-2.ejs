<% include ./../../helpers/format-date %>
<% include ./../../helpers/get-src %>
<% include ./../../helpers/get-description %>
<% include ./../../helpers/format-summary %>

<div class="ps-blog-grid pt-80 pb-80"> 
  <div class="ps-container">
    <div class="row">
      <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12 ">
        <% itemsRSS.forEach( (item) => { %>
          <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="width: 350px; height: 438.78px;">
            <div class="ps-post mb-30">
              <div class="ps-post__thumbnail"><a class="ps-post__overlay" href="<%= item.url %>" target="_blank"></a><img src="<%- getSrc(item.description) %>" style="width: 300px; height: 167px;" alt="<%= item.title %>" ></div>
              <div class="ps-post__content"><a class="ps-post__title" href="<%= item.url %>" target="_blank"><%= item.title %></a>
                <p class="ps-post__meta"><span>By:<a class="mr-5" href="#">Alena Studio</a></span> -<span class="ml-5"><%= formatDate(item.date) %></span></p>
                <p><%= formatSummaryHelper(getDescription(item.description)) %>â€¦</p><a class="ps-morelink" href="<%= item.url %>" target="_blank">Read more<i class="fa fa-long-arrow-right"></i></a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
      <% include ./../../elements/sidebar %>
    </div>
  </div>
</div>