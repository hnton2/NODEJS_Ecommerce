<% 
  const folder_upload = 'uploads/';
  const linkPrefix    	= systemConfig.prefixShop + '/';
  const linkCheckout    = systemConfig.prefixShop + '/checkout/';
  let total = 0;
%>
<div class="ps-content pt-80 pb-80"> 
	<div class="ps-container">
	  	<div class="ps-cart-listing">
			<table class="table ps-cart__table">
				<thead>
					<tr>
					<th>All Products</th>
					<th>Price</th>
					<th>Quantity</th>
					<th>Total</th>
					<th></th>
					</tr>
				</thead>
				<tbody>
					<% items.forEach( (item) => { %>
						<% total += item.price * item.quantity %>
						<tr>
							<td>
								<a class="ps-product__preview" href="<%= linkPrefix + item.product_type + '/' + item.slug %>">
									<img class="mr-15" src="<%= folder_upload + item.product_type + '/' + item.thumb %>" style="width: 100px; height: 100px;" alt="">
									<%= item.name %> 
									<% if('size' in item) { %>  
										- Size: <%= item.size %>
									<% } %>
								</a>
							</td>
							<td><div id="price-<%= item.id %>">$<%= item.price %></div></td>
							<td>
								<div class="form-group--number">
									<button class="minus" onclick="changeQuantity('<%= linkPrefix %>cart/change-quantity-decrease/<%= item.id %>')"><span>-</span></button>
									<input id="quantity-<%= item.id %>" class="form-control" type="text" value="<%= item.quantity %>">
									<button class="plus" onclick="changeQuantity('<%= linkPrefix %>cart/change-quantity-increase/<%= item.id %>')"><span>+</span></button>
								</div>
							</td>
							<td><div id="total-<%= item.id %>">$<%= item.price * item.quantity %></div></td>
							<td><a class="ps-remove" href="<%= linkPrefix %>cart/delete/<%= item.id %>"></a></td>
						</tr>
					<% }) %>
				</tbody>
			</table>
			<div class="ps-cart__actions">
				<div class="ps-cart__promotion"> 
					<form action="<%= linkPrefix %>cart/apply-promo-code" method="POST" id="form-promotion">
						<div class="form-group">
							<div class="ps-form--icon">
								<input class="form-control" type="text" name="discount_code" placeholder="Promo Code">
								<button class="btn" style="background-color: #2AC37D;color: aliceblue;">Apply <i class="fa fa-check" style="color: aliceblue;"></i></button>
							</div>
						</div>	
					</form>
				  </div>
				<div class="ps-cart__total">
					<h3>Total Price: <span id="info-total-price">$<%= total %></span></h3>
					<a class="ps-btn" href="<%= linkCheckout %>">Process to checkout<i class="ps-icon-next"></i></a>
				</div>
			</div>
	  	</div>
	</div>
</div>