<% 
  const folder_upload = 'uploads/shoes/';
  const linkShoes    = systemConfig.prefixShop + '/shoes/';
  let total = 0;
%>
<div class="ps-content pt-80 pb-80"> 
	<div class="ps-container">
	  	<div class="ps-cart-listing">
			<table class="table ps-cart__table">
				<thead>
					<tr>
					<th>All Products</th>
					<th>Size</th>
					<th>Price</th>
					<th>Quantity</th>
					<th>Total</th>
					<th></th>
					</tr>
				</thead>
				<tbody>
					<% items.forEach( (item) => { %>
						<% total += item.price * item.quantity %>
						<tr>
							<td>
								<a class="ps-product__preview" href="<%= linkShoes + item.slug %>">
									<img class="mr-15" src="<%= folder_upload + item.thumb %>" style="width: 100px; height: 100px;" alt=""><%= item.name %>
								</a>
							</td>
							<td><%= item.size %></td>
							<td><div id="price-<%= item.id %>">$<%= item.price %></div></td>
							<td>
								<div class="form-group--number">
								<a href="/cart/change-quantity-decrease/<%= item.id %>"><button class="minus"><span>-</span></button></a>
								<input id="quantity-<%= item.id %>" class="form-control" type="text" value="<%= item.quantity %>">
								<a href="/cart/change-quantity-increase/<%= item.id %>"><button class="plus"><span>+</span></button></a>
								</div>
							</td>
							<td><div id="total-<%= item.id %>">$<%= item.price * item.quantity %></div></td>
							<td>
								<a class="ps-remove" href="/cart/delete/<%= item.id %>"></a>
							</td>
						</tr>
					<% }) %>
				</tbody>
			</table>
			<div class="ps-cart__actions">
				<div class="ps-cart__promotion">
					<div class="form-group">
						<div class="ps-form--icon"><i class="fa fa-angle-right"></i>
						<input class="form-control" type="text" placeholder="Promo Code">
						</div>
					</div>
					<div class="form-group">
						<a class="ps-btn" href="/category">Continue Shopping<i class="ps-icon-next"></i></a>
					</div>
				</div>
				<div class="ps-cart__total">
					<h3>Total Price: <span> <%= total %> $</span></h3><a class="ps-btn" href="/checkout">Process to checkout<i class="ps-icon-next"></i></a>
				</div>
			</div>
	  	</div>
	</div>
</div>