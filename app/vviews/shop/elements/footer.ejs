<% 
    const linkPrefix      = systemConfig.prefixShop + '/';
    const linkSubscribe      = systemConfig.prefixShop + '/subscribe';
%>
<div class="ps-subscribe">
  <div class="ps-container">
    <div class="row">
          <div class="col-lg-3 col-md-7 col-sm-12 col-xs-12 ">
            <h4 style="color: aliceblue;"><i class="fa fa-envelope"></i>&nbsp;Sign up to Newsletter</h4>
          </div>
          <div class="col-lg-5 col-md-7 col-sm-12 col-xs-12 ">
            <span data-alertid="example"></span>
            <form class="ps-subscribe__form" action="<%= linkSubscribe %>" method="POST">
              <input class="form-control" type="text" id="email-subscribe" name='email' placeholder="Enter your email...">
              <button>Subscribe now</button>
            </form>
          </div>
          <div class="col-lg-4 col-md-5 col-sm-12 col-xs-12 ">
            <p>...and receive  <span>$20</span>  coupon for first shopping.</p>
          </div>
    </div>
  </div>
</div>
<div class="ps-footer bg--cover" data-background="">
  <div class="ps-footer__content">
    <div class="ps-container">
      <div class="row">
        <div class="col-lg-4 col-md-3 col-sm-12 col-xs-12 ">
          <aside class="ps-widget--footer ps-widget--info">
            <header>
              <h3 class="ps-widget__title">Address Office</h3>
            </header>
            <footer>
              <p><strong><%= webConfig.address %></strong></p>
              <p>Email: <a href='#'><%= webConfig.email %></a></p>
              <p>Phone: +<%= webConfig.hotline %></p>
            </footer>
          </aside>
        </div>
        <div class="col-lg-2 col-md-3 col-sm-12 col-xs-12 ">
          <!-- <aside class="ps-widget--footer ps-widget--info">
            <header>
              <h3 class="ps-widget__title">Address Office 2</h3>
            </header>
            <footer>
              <p><strong>PO Box 16122 Collins  Victoria 3000 Australia</strong></p>
              <p>Email: <a href='mailto:support@store.com'>support@store.com</a></p>
              <p>Phone: +323 32434 5334</p>
              <p>Fax: ++323 32434 5333</p>
            </footer>
          </aside> -->
        </div>
        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12 ">
          <aside class="ps-widget--footer ps-widget--link">
            <header>
              <h3 class="ps-widget__title">Find Our Website</h3>
            </header>
            <footer>
              <ul class="ps-list--link">
                <li><a href="#">Coupon Code</a></li>
                <li><a href="#">SignUp For Email</a></li>
                <li><a href="<%= linkPrefix + 'about/' %>">About us</a></li>
                <li><a href="<%= linkPrefix + 'contact/' %>">Contact us</a></li>
              </ul>
            </footer>
          </aside>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12 ">
          <aside class="ps-widget--footer ps-widget--link">
            <header>
              <h3 class="ps-widget__title">Products</h3>
            </header>
            <footer>
              <ul class="ps-list--line">
                <% itemsProductCategory.forEach ( (item)=>{ %>
                  <li><a href="<%= linkPrefix + 'category/' + item.slug %>"><%= item.name %></a></li>
                <% }) %>
              </ul>
            </footer>
          </aside>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12 ">
          <aside class="ps-widget--footer ps-widget--link">
            <header>
              <h3 class="ps-widget__title">Brand</h3>
            </header>
            <footer>
              <ul class="ps-list--line">
                <% itemsBrand.forEach ( (item)=>{ %>
                  <li><a href=""><%= item.name %></a></li>
                <% }) %>
              </ul>
            </footer>
          </aside>
        </div>
      </div>
    </div>
  </div>
  <div class="ps-footer__copyright">
    <div class="ps-container">
      <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 ">
          <p>&copy; <%= webConfig.name_website %>, Inc. All rights Resevered. Design by <a href="#"> Alena Studio</a></p>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 ">
          <ul class="ps-social">
            <li><a href="<%= webConfig.facebook %>"><i class="fa fa-facebook"></i></a></li>
            <li><a href="<%= webConfig.instagram %>"><i class="fa fa-google-plus"></i></a></li>
            <li><a href="<%= webConfig.twitter %>"><i class="fa fa-twitter"></i></a></li>
            <li><a href="<%= webConfig.instagram %>"><i class="fa fa-instagram"></i></a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>