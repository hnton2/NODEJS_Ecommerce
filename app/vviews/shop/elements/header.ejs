<% const linkPrefix     = systemConfig.prefixShop + '/' %>
<div class="header--sidebar"></div>
<header class="header">
    <div class="header__top">
      <div class="container-fluid">
        <div class="row">
              <div class="col-lg-6 col-md-8 col-sm-6 col-xs-12 "> 
                <p><%= webConfig.address %> -  Hotline: +<%= webConfig.hotline %></p>
              </div>
              <div class="col-lg-6 col-md-4 col-sm-6 col-xs-12 ">
                <div class="header__actions">
                  <a href="<%= linkPrefix %>promotion">Promotion</a>
                  <a href="<%= linkPrefix %>orders-tracking">Order Status</a>
                  <a href="<%= linkPrefix %>contact">Contact</a>
                </div>
              </div>
        </div>
      </div>
    </div>
    <nav class="navigation">
      <div class="container-fluid">
        <div class="navigation__column left">
          <div class="header__logo"><a class="ps-logo" href="<%= linkPrefix %>"><img src="uploads/config/<%= webConfig.logo %>" style="width:350px" alt=""></a></div>
        </div>
        <div class="navigation__column center">
          <ul class="main-menu menu">
            <li class="menu-item" data-active=""><a href="<%= linkPrefix %>">Home</a></li>
            <li class="menu-item menu-item-has-children has-mega-menu" data-active="category"><a href="javascript:void(0)">Category</a>
              <div class="mega-menu">
                <div class="mega-wrap">
                  <div class="mega-column">
                    <ul class="mega-item mega-features">
                      <li><a href="<%= linkPrefix + 'event/new-releases'%>">NEW RELEASES</a></li>  <!-- Sản phẩm mới -->
                      <li><a href="<%= linkPrefix + 'event/most-popular'%>">MOST POPULAR</a></li> <!-- sản phẩm được mua nhiều và yêu thích nhiều -->
                      <li><a href="<%= linkPrefix + 'event/most-favourite'%>">MOST FAVOURITE</a></li> <!-- sản phẩm được yêu thích nhiều -->
                      <li><a href="<%= linkPrefix + 'event/highly-rated-product'%>">HIGHLY RATED PRODUCT</a></li> <!-- sản phẩm được được đánh giá cao -->
                      <li><a href="<%= linkPrefix + 'event/flash-sale'%>">FLASH SALE</a></li> <!-- sản phẩm giảm giá -->
                      <li><a href="<%= linkPrefix + 'event/best-sellers'%>">BEST SELLERS</a></li> <!-- sản phẩm được mua nhiều -->
                      <li><a href="<%= linkPrefix + 'event/trending-product'%>">NOW TRENDING</a></li> <!-- sản phẩm có thuộc tính special -->
                      <li><a href="<%= linkPrefix + 'blog/trending' %>">HOT NEWS</a></li> <!-- tin tức thời trang nổi bật -->
                    </ul>
                  </div>
                  <div class="mega-column">
                    <h4 class="mega-heading">Shoes</h4>
                    <ul class="mega-item">
                      <li><a href="<%= linkPrefix + 'category/shoes' %>">All</a></li>
                      <% itemsProductCategory.forEach ( (item)=>{ %>
                        <li><a href="<%= linkPrefix + 'category/shoes?slug=' + item.slug %>"><%= item.name %></a></li>
                      <% }) %>
                    </ul>
                  </div>
                  <div class="mega-column">
                    <h4 class="mega-heading">Clothing</h4>
                    <ul class="mega-item">
                      <li><a href="<%= linkPrefix + 'category/clothing' %>">All</a></li>
                      <% itemsClothingCategory.forEach ( (item)=>{ %>
                        <li><a href="<%= linkPrefix + 'category/clothing?slug=' + item.slug %>"><%= item.name %></a></li>
                      <% }) %>
                    </ul>
                  </div>
                  <div class="mega-column">
                    <h4 class="mega-heading">Accessories & Equipment</h4>
                    <ul class="mega-item">
                      <li><a href="<%= linkPrefix + 'category/accessory' %>">All</a></li>
                      <% itemsAccessoryCategory.forEach ( (item)=>{ %>
                        <li><a href="<%= linkPrefix + 'category/accessory?slug=' + item.slug %>"><%= item.name %></a></li>
                      <% }) %>
                    </ul>
                  </div>
                  <div class="mega-column">
                    <h4 class="mega-heading">BRAND</h4>
                    <ul class="mega-item">
                      <li><a href="<%= linkPrefix + 'category/trademark' %>">All</a></li>
                      <% itemsBrand.forEach ( (item)=>{ %>
                        <li><a href="<%= linkPrefix + 'category/trademark?brand=' + item.slug %>"><%= item.name %></a></li>
                      <% }) %>
                    </ul>
                  </div>
                </div>
              </div>
            </li>
            <li class="menu-item menu-item-has-children dropdown" data-active="news-rss"><a href="<%= linkPrefix + 'blog/all' %>">Blog</a>
              <ul class="sub-menu">
                <li class="menu-item"><a href="<%= linkPrefix + 'blog/all' %>">View all</a></li>
                <li class="menu-item"><a href="<%= linkPrefix + 'blog/trending' %>">Trending</a></li>
                <li class="menu-item menu-item-has-children dropdown"><a href="<%= linkPrefix + 'blog/rss/fashion-news' %>">RSS News</a>
                  <ul class="sub-menu">
                    <li class="menu-item"><a href="<%= linkPrefix + 'blog/rss/fashion-news' %>">Fashion</a></li>
                    <li class="menu-item"><a href="<%= linkPrefix + 'blog/rss/local-news' %>">Local news</a></li>
                  </ul>
                </li>
                <% itemsCategory.forEach ( (item)=>{ %>
                  <li class="menu-item"><a href="<%= linkPrefix + 'blog/' + item.slug %>"><%= item.name %></a></li>
                <% }) %>
              </ul>
            </li>
            <li class="menu-item" data-active="about"><a href="<%= linkPrefix + 'about' %>">About</a></li>
            <li class="menu-item" data-active="contact"><a href="<%= linkPrefix + 'contact' %>">Contact</a></li>
          </ul>
        </div>
        <div class="navigation__column right">
          <form class="ps-search--header query" action="<%=linkPrefix + 'search'%>" method="GET">
            <input class="form-control" type="text" placeholder="Search Product…" name="keyword" value="" id="search-product">
            <button type="submit" id="btn_search"><i class="ps-icon-search"></i></button> 
          </form>
          <div class="ps-cart">
            <a class="ps-cart__toggle" href="<%= linkPrefix + 'cart' %>"><i class="ps-icon-shopping-cart"></i></a>
          </div>
          <div class="menu-toggle"><span></span></div>
        </div>
      </div>
    </nav>
</header>
<div class="header-services">
  <div class="ps-services owl-slider" data-owl-auto="true" data-owl-loop="true" data-owl-speed="7000" data-owl-gap="0" data-owl-nav="true" data-owl-dots="false" data-owl-item="1" data-owl-item-xs="1" data-owl-item-sm="1" data-owl-item-md="1" data-owl-item-lg="1" data-owl-duration="1000" data-owl-mousedrag="on">
    <p class="ps-service"><i class="ps-icon-delivery"></i><strong>Free delivery</strong>: Get free standard delivery on every order with Fashion Store</p>
    <p class="ps-service"><i class="ps-icon-customer-service"></i><strong>Support</strong>: We offer a 24/7 customer hotline so you’re never alone if you have a question.</p>
    <p class="ps-service"><i class="ps-icon-heart"></i><strong>Prestige and quality</strong>: Product quality is the top priority</p>
  </div>
</div>