<% include ./../../helpers/format-date %>
<% 
    const folder_uploads = "uploads/articles/"; 
    const linkPrefix     = systemConfig.prefixBlog + '/article/';
%>
<div class="container-fluid pt-3">
    <div class="container animate-box" data-animate-effect="fadeIn">
        <div>
            <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4 fs-250">Trending</div>
        </div>
        <div class="owl-carousel owl-theme js" id="slider1">
            <% for(let i = 0; i < itemsTrending.length; i++) { %>
                <div class="item px-2">
                    <div class="fh5co_latest_trading_img_position_relative">
                        <div class="fh5co_latest_trading_img"><img src="<%= folder_uploads + itemsTrending[i].thumb %>" alt=""class="fh5co_img_special_relative"/></div>
                        <div class="fh5co_latest_trading_img_position_absolute"></div>
                        <div class="fh5co_latest_trading_img_position_absolute_1">
                            <a href="<%= linkPrefix + itemsTrending[i].id %>" class="text-white"> <%= itemsTrending[i].name %> </a>
                            <div class="fh5co_latest_trading_date_and_name_color"> <%= formatDate(itemsTrending[i].created.time) %></div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<div class="container-fluid pb-4 pt-5">
    <div class="container animate-box">
        <div>
            <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4 fs-250">Hot news</div>
        </div>
        <div class="owl-carousel owl-theme" id="slider2">
            <% itemsNews.forEach ( (item)=>{ %>
                <div class="item px-2">
                    <div class="fh5co_hover_news_img">
                        <div class="fh5co_news_img"><img src="<%= folder_uploads + item.thumb %>" alt="<%= item.name %>"/></div>
                        <div>
                            <a href="article/<%= item.id %>" class="d-block fh5co_small_post_heading"><span class=""><%= item.name %></span></a>
                            <div class="c_g"><i class="fa fa-clock-o"></i> <%= formatDate(item.created.time) %></div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>